                  'Callback', @modifyPorodQu, ...
                  'Tag', 'm_radio_remove_Poro', ...
                  'Visible', 'off');
            uicontrol(fit_Rg_panel, ...
                  'Style', 'pushbutton', ...
                  'Position', [25 10 50 25], ...
