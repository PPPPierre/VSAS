 %% 主题程序类定义

classdef VSAS_MAIN
    
    properties
        
        % 程序运行所在计算机的屏幕大小
        screen_size; 
        % 程序窗口尺寸
        window_width; 
        window_height;
        
        % 状态指示变量
        flag_dis_fit_init;
        flag_fit;
        flag_fit_slider_init;
        flag_guinier_init;
        flag_load_data;
        flag_model_init;
        
        % 拟合相关变量
        FIT_INFO;
        var_values;
        
        % 模型选项 mode = model
        mode_dist;
        mode_form;
        mode_stru;
        mode_sld;
        mode_alpha;
        model_number;
        
        % 设置窗口相关变量 set = setting
        set_par_range_cell;
        set_model_table;
        set_BO_opt_table;
        set_GS_opt_table;
        set_program_par_table;
        
        % 拟合进程显示相关变量
