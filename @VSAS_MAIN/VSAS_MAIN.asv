            axis([0 obj.dt_q_max+0.1 obj.dt_E_min-1 obj.dt_E_max+1])
            xlabel(obj.wd_res_fig, '$q(nm^{-1})$', ...
                'Fontsize', obj.COORDINATE_FONT_SIZE, ...
