        guinier_para_Rg
        guinier_para_Rsp
        guinier_result
        
        % UI组件 wd = widget
        wd_main_window;
        wd_res_fig;
        wd_popmenu_mode;
        wd_datafile_annotation;
        wd_guinier_slideralpha;
        wd_guinier_editTestalpha;
        wd_guinier_sliderqmin;
        wd_guinier_editTestqmin;
        wd_guinier_sliderqmax;
        wd_guinier_editTestqmax;
        wd_guinier_C_result
        wd_guinier_Ibg_result
