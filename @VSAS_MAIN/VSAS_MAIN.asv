            annotation(result_panel, 'textbox', ...
                'Units', 'pixel', ...
                'Position', [20, 60, 50, 20], ...
                'String', '$I_{Laue}\,=$', ...
                'interpreter', 'latex', ...
                'EdgeColor', [0.941, 0.941, 0.941], ...
                'FontSize', obj.ANNOTATION_FONT_SIZE, ...
                'Tag', 'm_label_result_laue', ...
                'FitBoxToText', 'on', ...
